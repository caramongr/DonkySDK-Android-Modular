<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/dk_rich_message_list_element_pressed_background">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/dk_rich_message_list_element_selected_background" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/dk_rich_message_list_element_selected_background" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/dk_rich_message_list_element_focused_background" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/dk_rich_message_list_element_normal_background" />
        </shape>
    </item>
</selector>
