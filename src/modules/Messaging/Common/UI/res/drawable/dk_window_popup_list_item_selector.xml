<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dk_window_popup_list_element_pressed_background"/>
        </shape>
    </item><!-- pressed -->

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/dk_window_popup_list_element_focused_background"/>
        </shape>
    </item><!-- focused -->

    <item>
        <shape>
            <solid android:color="@color/dk_window_popup_list_element_normal_background"/>
        </shape>
    </item><!-- default -->

</selector>
