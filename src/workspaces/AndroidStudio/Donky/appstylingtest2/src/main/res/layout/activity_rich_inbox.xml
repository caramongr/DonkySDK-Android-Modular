<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rich_inbox_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_top"
        android:layout_weight="1">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/app_left"
            android:layout_weight="1">
        </View>

        <FrameLayout
            android:id="@+id/rich_inbox_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/app_right"
            android:layout_weight="1">
        </View>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_bottom"
        android:layout_weight="1">
    </View>

</LinearLayout>
